{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./src/*"],
      "@/*": ["./src/*"],
      "@i18n/*": ["./i18n/*"],
      "@components/*": ["./src/components/*"],
      "@habits/*": ["./src/components/habits/*"],
      "@vape/*": ["./src/components/vape/*"],
      "@quotes/*": ["./src/components/quotes/*"],
      "@negativeHabits/*": ["./src/components/negativeHabits/*"],
      "@rooms/*": ["./src/components/rooms/*"],
      "@journaling/*": ["./src/components/journaling/*"],
      "@you/*": ["./src/components/you/*"],
      "@sections/*": ["./src/sections/*"],
      "@lib/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"]
    }
  },
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "cypress",
    "tests",
    "scripts"
  ]
}
