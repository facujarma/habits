{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./src/*"],
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@sections/*": ["./src/sections/*"],
      "@lib/*": ["./src/utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "cypress",
    "tests",
    "scripts"
  ]
}
